                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/PA_Actividad_años"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad"
                app:layout_constraintTop_toBottomOf="@+id/Pa_nacionalidad" />

            <TextView
                android:id="@+id/PA_genero_cine"
                android:layout_width="141dp"
                android:layout_height="52dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/PA_genero_cine"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/PA_genero"
                app:layout_constraintTop_toBottomOf="@+id/PA_años_actividad" />

