                android:text="@string/PA_Educacion"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/PA_genero"
                app:layout_constraintTop_toBottomOf="@+id/Pa_belleza" />

            <TextView
                android:id="@+id/PA_premios"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/PA_premios"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/PA_genero"
                app:layout_constraintTop_toTopOf="@+id/PA_premios_ic" />

            <TextView
                android:id="@+id/Pa_media"
                android:layout_width="151dp"
                android:layout_height="60dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/PA_media"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_genero"
                app:layout_constraintTop_toTopOf="@+id/PA_media_ic" />

            <TextView
                android:id="@+id/Pa_genero_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_genero_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_genero" />

            <TextView
                android:id="@+id/PA_años_actividad_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_Actividad_años_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_años_actividad_ic" />

            <TextView
                android:id="@+id/Pa_nacionalidad_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_Nacionalidad_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_nacionalidad_ic" />

            <TextView
                android:id="@+id/PA_genero_cine_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_genero_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_genero_cine_ic" />

            <TextView
                android:id="@+id/PA_exp_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_exp_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_exp" />

            <TextView
                android:id="@+id/Pa_belleza_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_Belleza_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/Pa_belleza" />

            <TextView
                android:id="@+id/Pa_educacion_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_Educacion_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_educacion_ic" />

            <TextView
                android:id="@+id/PA_premios_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_premios_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_premios_ic" />

            <TextView
                android:id="@+id/Pa_media_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_media_txt"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/PA_edad_tx"
                app:layout_constraintTop_toTopOf="@+id/PA_media_ic" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/PA_titulo"
        android:layout_width="278dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:text="@string/Perfil_actor"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/Pa_menu"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_24" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="173dp"
        android:layout_height="124dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anonymous" />






