                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/PA_genero"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@id/PA_edad"
                app:layout_constraintTop_toBottomOf="@id/PA_edad" />

            <TextView
                android:id="@+id/PA_edad_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="104dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/PA_Edad_txt"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toEndOf="@+id/PA_edad"
                app:layout_constraintTop_toTopOf="@+id/PA_edad" />

