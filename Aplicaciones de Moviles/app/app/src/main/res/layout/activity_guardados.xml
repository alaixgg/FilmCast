<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actores_guardados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.login.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Perfil_Actor1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.login.MainActivity"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-194dp">


        <Button
            android:id="@+id/menu_button_buscar"
            android:layout_width="139dp"
            android:layout_height="49dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/came"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/GA_boton_buscar"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/GA_boton_volver"
            android:layout_width="139dp"
            android:layout_height="49dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/came"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/GA_boton_volver"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/PA_perfil"
            android:layout_width="49dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_person_outline_24" />

        <ImageView
            android:id="@+id/Pa_menu"
            android:layout_width="49dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_24" />

        <TextView
            android:id="@+id/GA_titulo"
            android:layout_width="295dp"
            android:layout_height="79dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center"
            android:text="@string/GA_titulo"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="420dp"
            android:layout_height="548dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GA_titulo">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="202dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/grey"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:id="@+id/GA_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:text="@string/GA1_Nombre"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.218"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/GA_1_Genero_ic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/GA_1"
                        app:srcCompat="@drawable/genero_neutro_blanco" />

                    <TextView
                        android:id="@+id/GA_1_genero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/GA1_Genero"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        app:layout_constraintStart_toEndOf="@+id/GA_1_Genero_ic"
                        app:layout_constraintTop_toTopOf="@+id/GA_1_Genero_ic" />

                    <ImageView
                        android:id="@+id/GA_1_precio_ic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="@+id/GA_1_Genero_ic"
                        app:layout_constraintTop_toBottomOf="@+id/GA_1_Genero_ic"
                        app:srcCompat="@drawable/money_24" />

                    <TextView
                        android:id="@+id/Pa_precio_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/GA1_precio"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        app:layout_constraintStart_toStartOf="@+id/GA_1_genero"
                        app:layout_constraintTop_toBottomOf="@+id/GA_1_Genero_ic" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="@+id/GA_1_precio_ic"
                        app:layout_constraintTop_toBottomOf="@+id/GA_1_precio_ic"
                        app:srcCompat="@drawable/category_24" />

                    <TextView
                        android:id="@+id/Pa_genero_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/GA1_cineGenero"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        app:layout_constraintStart_toStartOf="@+id/GA_1_genero"
                        app:layout_constraintTop_toBottomOf="@+id/GA_1_precio_ic" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="117dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/anonymous" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>