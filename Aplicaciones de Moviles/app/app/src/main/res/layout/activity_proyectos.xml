<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Perfil_Actor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.login.Proyectos">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".LoginActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/Pr_perfil"
            android:layout_width="49dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_person_outline_24" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="392dp"
            android:layout_height="583dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="7dp"
            android:background="@color/grey"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/Pr_nombre_proyecto"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Pr_descripcion_proyecto.re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="8dp"

                android:fontFamily="@font/montserrat_medium"
                android:text="@string/Pr_descripcion_proyecto.re"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />


            <ImageView
                android:id="@+id/PA_genero_cine_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pr_descripcion_proyecto.re"
                app:srcCompat="@drawable/genero_cine" />

            <TextView
                android:id="@+id/PA_genero_cine"
                android:layout_width="141dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/Pr_genero_cinematografico"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/PA_genero_cine_ic"
                app:layout_constraintTop_toBottomOf="@+id/Pr_descripcion_proyecto.re" />

            <TextView
                android:id="@+id/PA_genero_cine_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/Pr_genero_cinematografico.re"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toEndOf="@+id/PA_genero_cine"
                app:layout_constraintTop_toTopOf="@+id/PA_genero_cine_ic" />

            <ImageView
                android:id="@+id/Pr_fecha"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="108dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pr_descripcion_proyecto.re"
                app:srcCompat="@drawable/baseline_calendar_month_24" />

            <TextView
                android:id="@+id/Pr_fecha_inicio"
                android:layout_width="132dp"
                android:layout_height="35dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/Pr_fecha_inicio"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/PA_genero_cine_ic"
                app:layout_constraintTop_toBottomOf="@+id/PA_genero_cine_ic" />

            <TextView
                android:id="@+id/Pr_fecha_fin"
                android:layout_width="123dp"
                android:layout_height="32dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/Pr_fecha_fin"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/PA_genero_cine_ic"
                app:layout_constraintTop_toBottomOf="@+id/PA_genero_cine_ic" />

            <TextView
                android:id="@+id/Pr_fecha_inicio.r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/Pr_fecha_inicio.re"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toEndOf="@+id/Pr_fecha"
                app:layout_constraintTop_toBottomOf="@+id/Pr_fecha_inicio" />

            <TextView
                android:id="@+id/Pr_fecha_fin.r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/Pr_fecha_fin.re"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/Pr_fecha_fin"
                app:layout_constraintTop_toTopOf="@+id/Pr_fecha_inicio.r" />


            <ImageView
                android:id="@+id/Pr_presupuesto.im"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="204dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pr_descripcion_proyecto.re"
                app:srcCompat="@drawable/money_24" />

            <TextView
                android:id="@+id/Pr_presupuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="144dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/Pr_presupuesto"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/PA_genero_cine_ic"
                app:layout_constraintTop_toBottomOf="@+id/PA_genero_cine_ic" />

            <TextView
                android:id="@+id/Pr_presupuesto.r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/Pr_presupuesto.re"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/Pr_fecha_fin"
                app:layout_constraintTop_toTopOf="@+id/Pr_fecha_inicio.r" />

            <TextView
                android:id="@+id/Pr_actores_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="264dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="@string/Pr_actores_rel"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pr_descripcion_proyecto.re" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/Pr_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:text="@string/Pr_Titulo"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/Pr_menu"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_24" />





</androidx.constraintlayout.widget.ConstraintLayout>