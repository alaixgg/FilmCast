<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#D3D3D3"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <!-- Título del evento -->
    <TextView
        android:id="@+id/LP_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LP1_nombre_pr"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <!-- Información de participantes y confirmación -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">



        <TextView
            android:id="@+id/LP_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LP1_fecha"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Fecha del evento -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">



        <TextView
            android:id="@+id/LP_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LP1_precio"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Mensajes nuevos -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">



        <TextView
            android:id="@+id/LP_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LP1_Genero"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
